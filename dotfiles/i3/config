### i3 conf ###

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# Lock, halt, restart, etc
set $lock_mode System: [l]ock [h]alt [r]estart [e]xit
bindsym $mod+Shift+x mode "$lock_mode"
mode "$lock_mode" {
    bindsym l exec i3lock -c 000000 ; mode "default"
    bindsym h exec shutdown -h now ; mode "default"
    bindsym r exec shutdown -r now ; mode "default"
    bindsym e exec i3-msg exit; mode "default"
    bindsym Escape mode "default"
}
