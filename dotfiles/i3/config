### Program shortcuts ###
# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run
# start a terminal
bindsym $mod+Return exec $TERMINAL
# start a file browser
bindsym $mod+r exec $TERMINAL -e $FILE
# web bindings
bindsym $mod+w exec $BROWSER
set $web_bindings Web: [o]pen_link [q]utebrowser [f]irefox [b]rave
bindsym $mod+Shift+w mode "$web_bindings"
mode "$web_bindings" {
    bindsym q exec qutebrowser; mode "default"
    bindsym f exec firefox ; mode "default"
    bindsym b exec brave ; mode "default"
    bindsym o exec open_quick_link ; mode "default"
    bindsym Escape mode "default"
}
# start htop
bindsym $mod+p exec $TERMINAL -e htop
# Mount and unmount drives
bindsym $mod+F2 exec $HOME/bin/pmount
bindsym $mod+ShiftF2 exec $HOME/bin/unmount
# Change monitor setup
bindsym $mod+F4 exec $HOME/bin/multimonitor
# Change keyboard layout
bindcode $mod+49 exec $HOME/bin/setkbmap && pkill -RTMIN+3 i3blocks
# Screenshots
bindsym $mod+Print       exec $HOME/bin/screenshot
bindsym Print            exec $HOME/bin/screenshot "window"
bindsym Shift+Print      exec $HOME/bin/screenshot "window copy"
bindsym Ctrl+Print       exec $HOME/bin/screenshot "selection"
bindsym Ctrl+Shift+Print exec $HOME/bin/screenshot "selection copy"

### Window Interactions ###
# kill focused window
bindsym $mod+Shift+q kill
# change focus
bindsym $mod+$left focus left
